{
  "packages": {
    ".": {
      "release-type": "simple",
      "bump-minor-pre-major": true,
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        {
          "type": "plain-text",
          "path": "lua/thorn/init.lua",
          "search": "M.version = \".*\"",
          "replace": "M.version = \"${version}\""
        }
      ],
      "changelog-types": [
        { "type": "feat", "section": "Features", "hidden": false },
        { "type": "fix", "section": "Fixes", "hidden": false },
        { "type": "docs", "section": "Documentation", "hidden": true },
        { "type": "perf", "section": "Performance Tweaks", "hidden": false },
        { "type": "style", "section": "Changes", "hidden": true }
      ]
    }
  }
}
